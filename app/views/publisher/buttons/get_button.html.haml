- content_for :title, '25c - ' + t('.title')

= content_for(:js) do
  = javascript_include_tag "sprintf-0.6"
  = javascript_include_tag "save-button"
  = javascript_include_tag "verify-email"                                                         
  :javascript
    window.buttonId = '#{ @button.uuid }';
    window.updateButtonUrl = '#{ j publisher_update_button_url }';
    window.shareEmailUrl = '#{ j publisher_share_email_url }';
    window.userNickname = '#{ @user.nickname.blank? ? '' : @user.nickname }';
    window.userPledgeName = '#{ @user.display_name }';
    window.isButtonPage = true;
    window.buttonSize = '#{ @button.size.blank? ? '' : @button.size }';
    window.invalidEmail = '#{ t('.invalid_email') }';

%h2.page-header= t('.title')
%p.buffer= t('.subtitle')

= render :partial => 'choose_platform', :locals => { :hide => false }

= render :partial => 'choose_button', :locals => { :hide => false }

= render :partial => 'get_code', :locals => { :hide => false }
  
= render :partial => 'share_revenue', :locals => { :hide => false }
