#get-code.step-container{:class => hide ? 'hide' : ''}
  .step-number 3
  .step-content
    %h3.step-title.if-code= t('home.buttons.receive_pledges.get_code_title')
    %h3.step-title.if-link.hide= t('home.buttons.receive_pledges.get_link_title')
    .step-body.buffer
      #button-preview-container.if-code
        #button-preview-title
          = t('home.buttons.receive_pledges.button_preview')
        #button-preview     
      #code-container.if-code
        %p
          %b= t('home.buttons.receive_pledges.button_code')
        %pre#button-code-block
