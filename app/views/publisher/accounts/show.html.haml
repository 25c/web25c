- content_for :title, t('helpers.submit.update', :model => User.model_name.human)
.padded
  %h1= yield :title
  = simple_form_for [:publisher, current_user], :html => { :class => 'form-horizontal' } do |f|
    = f.input :pledge_name
    = f.input :email
    .control-group
      .controls
        = f.submit :class => 'button'
