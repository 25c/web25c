- content_for :title, t('.title')
.page-header
  %h1= yield :title
= simple_form_for @user, :url =>home_profile_path, :html => { :class => 'form-horizontal' } do |f|
  = f.input :nickname
  = f.input :first_name
  = f.input :last_name
  = f.input :about, :input_html => { :rows => 4 }
  / = f.input :picture
  .form-actions
    = f.button :submit, :class => 'btn-primary'
