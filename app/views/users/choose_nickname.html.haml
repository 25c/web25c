%h2.page-header= t('.title')
%p
  = t('.instructions')
%p.buffer
  - if @user.nickname.blank?
    = t('.example')
  - else
    = t('.user_url')
    = link_to(@url, @url)
= simple_form_for @user, :url => choose_nickname_path, 
  :html => { :class => 'form-horizontal' } do |f|
  = f.input :nickname
  .form-actions
    = f.button :submit, :class => 'btn-strong', :value => t('.submit')