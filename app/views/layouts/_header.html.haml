=render 'layouts/fb_login'
.navbar
  .navbar-inner
    .container
      %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a#nav-logo.pull-left(href=root_path)
        %img{:src => image_path('25c-logo-medium.png')}
      %span#nav-tagline.navbar-text= t('.tagline')
      .nav-collapse.pull-right
        - if signed_in?
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle{ :href => '#', :'data-toggle' => 'dropdown' }
                = image_tag(current_user.get_thumb, :class => 'thumb-picture')
                = current_user.display_name
                %b.caret
              %ul.dropdown-menu
                %li= link_to t('.dashboard'), home_dashboard_path
                %li= link_to t('.buttons'), home_buttons_path
                %li= link_to t('.payments'), home_payment_path
                - if current_user.nickname.blank?
                  %li= link_to t('.profile'), choose_nickname_path
                - else
                  %li= link_to t('.profile'), profile_path(current_user.nickname)
                %li= link_to t('.account'), home_account_path
                %li= link_to t('.sign_out'), sign_out_path, :id => 'sign-out'
        - else
          %ul.login-buttons.nav.pull-right
            .hide
              %li.fb-login-button(data-scope="email,publish_actions")
            %li.navbar-text.pull-right= t('.sign_in_with')
            %li.login-logo
              %a.facebook-btn= image_tag "logos/facebook.png"
            / %li.login-logo= link_to image_tag("logos/twitter.png"), '/auth/twitter'
            %li.login-logo= link_to image_tag("logos/google.png"), '/auth/google_oauth2'