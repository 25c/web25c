= content_for(:js) do
  = javascript_include_tag "sign-in-form"
  :javascript
    window.submit_text = {
      new: '#{ j t('users.sign_in.submit_new') }',
      existing: '#{ j t('users.sign_in.submit_existing') }'
    };

#sign-in
  .hide
    .fb-login-button(data-scope="email,publish_actions")
      = t('users.sign_in.facebook')
  .lead.compact-lead= t('users.sign_in.connect')
  .login-buttons
    %a.facebook-btn.pointer= image_tag "logos/facebook-large.png"
    = link_to image_tag("logos/twitter-large.png"), "/auth/twitter"
    = link_to image_tag("logos/google-large.png"), "/auth/google_oauth2"
  #sign-in-or
    %b.lead= t('users.sign_in.or')
  = simple_form_for @user, :url => sign_in_path, :html => { :class => 'form-horizontal' } do |f|
    #sign-in-choose-account
      %input{:type => 'radio', :name => 'user_account', :value => 'new', 
        :checked => @new ? true : false}
        =t('users.sign_in.new_account')
      %input{:type => 'radio', :name => 'user_account', :value => 'existing',
        :checked => @new ? false : true}
        =t('users.sign_in.existing_account')
    = render 'layouts/alerts'    
    = f.input :email, :label => t("users.sign_in.email")
    = f.input :password, :label => t("users.sign_in.password")
    = f.input :password_confirmation, :label => t("users.sign_in.confirm_password")
    -if @button_id
      %input{:type => 'hidden', :name => 'button_id', :value => @button_id}
      %input{:type => 'hidden', :name => 'referrer', :value => @referrer}
    .form-actions
      = f.button :submit, t('users.sign_in.submit_new'), :class => 'btn'