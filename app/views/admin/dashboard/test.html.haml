- content_for :title, '25c - Admin Test Page'

%h2.page-header Admin Test Page

%p Logged in user: #{ @user.display_name }
%p Free balance: #{ number_to_currency(@user.balance_free) }
%p.buffer Paid balance: #{ number_to_currency(@user.balance_paid) }


%h3 Widgets
%p.buffer Belt owner: #{ @belt.user.display_name }
%p.buffer Testimonials owner: #{ @testimonials.user.display_name }


%h3 Fan Belt:
#test-javascript.buffer
  %div{ :href => @belt.user.profile_url,
    :class => "tip-25c-belt",
    :'data-id' => @belt.uuid.to_s,
    :'data-user' => @belt.user.display_name }
    #{@belt.title}
  :javascript
    !function(d,s,id){
      var js,fjs=d.getElementsByTagName(s)[0];
      if(!d.getElementById(id)){
        js=d.createElement(s);js.id=id;
        js.src="//#{ENV["API25C_URL"]}/public/javascripts/widget.js";
        fjs.parentNode.insertBefore(js,fjs);
      }
    } (document,"script","tip-25c-widget-js");

%h3 Comments:
#test-javascript.buffer
  %div{ :href => @testimonials.user.profile_url,
    :class => "tip-25c-feed",
    :'data-id' => @testimonials.uuid.to_s,
    :'data-user' => @testimonials.user.display_name }
    #{@testimonials.title}
