- content_for :title, '25c - ' + t('.title')

= content_for(:js) do
  = javascript_include_tag "submit-payment"
  :javascript
    window.createPaymentUrl = '#{ j home_create_payment_url }';
  <script type="text/javascript" src="https://www.dwolla.com/scripts/button.min.js"> </script>

%h2.page-header= t('.title')
-if @has_payin
  %p.buffer= t('.amount', :amount => number_to_currency(current_user.balance.to_f / 100000000))
  
  .row
    %a.pull-left{ :href => "http://www.25c.com/dwolla_process",
    :class => "dwolla_button",
    :'data-name' => "25c Pledges Payment",
    :'data-desc' => "Fund your 25c Pledges",
    :'data-amount' => "#{current_user.balance.to_f / 100000000}",
    :'data-shipping' => "0",
    :'data-tax' => "0",
    :'data-key' => "UUwr8uAr3vLzoItqjZBEmLGUSmOxy89jW86uKDphL6rz5RBSTu" } Pay Now With Dwolla
    
    = form_tag PAYPAL_SETTINGS['service_url'], :method => :post, :id => 'paypal-button-form' do
      = hidden_field_tag "business", PAYPAL_SETTINGS['merchant_id']
      = hidden_field_tag "cmd", "_xclick"
      = hidden_field_tag "amount", current_user.balance.to_f / 100000000
      = hidden_field_tag "notify_url", paypal_process_url
      = hidden_field_tag "item_name", t('.item_name')
      = hidden_field_tag "no_shipping", 1
      = hidden_field_tag "return", home_payment_success_url
      = hidden_field_tag "cancel_return", home_payment_url
      = image_submit_tag("#{PAYPAL_SETTINGS['assets_url']}/en_US/i/btn/btn_paynowCC_LG.gif", :border => "0",
        :alt => "PayPal - The safer, easier way to pay online!")
      = image_tag("#{PAYPAL_SETTINGS['assets_url']}/en_US/i/scr/pixel.gif", 
      :alt => "", :border => "0", :width => "1", :height => "1")
    
    .clear
    =image_tag 'logos/dwolla.png'
    %img{ :src => "https://www.paypal.com/en_US/Marketing/i/banner/bnr_payments_120x30_y.gif", :alt => "PayPal Logo", :style => "margin-left: 105px;"}

- else
  %p= t '.given', :total_amount => number_to_currency(current_user.balance.to_f / 100000000)
  %p= t('.click_more_p1')
  %p.buffer= t('.click_more_p2')
  %a= link_to t('.dashboard'), home_dashboard_path, :class => 'btn'    