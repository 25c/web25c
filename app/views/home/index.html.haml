= content_for(:js) do
  :javascript    
    $('#fb-share').click(function() {
      var fbShareHref = "https://www.facebook.com/dialog/feed?display=popup"
        + "&app_id=#{ FACEBOOK_SETTINGS['app_id'] }"
        + "&link=#{ root_url }"
        + "&picture=http://assets.25c.com.s3.amazonaws.com/logos/25c-logo-medium.png"
        + "&name=#{ j t('.facebook_share_title') }"
        + "&caption=" + " "
        + "&description=#{ j t('.facebook_share_description') }"
        + "&redirect_uri=#{ j fb_share_callback_url }";
      openPopup(fbShareHref, "Share on Facebook");
    });
    $('#tw-share').click(function() {
      var twShareHref = "https://twitter.com/share?url=" + encodeURIComponent("#{ root_url }");
      openPopup(twShareHref, "Share on Twitter");
    });
    
    var timer = null;
    
    $('#splash-button').hover(function() {
      clearTimeout(timer);
      $('#splash-tooltip').fadeIn('fast');
    }, function() {
      clearTimeout(timer);
      timer = setTimeout(function() {
        $('#splash-tooltip').fadeOut('fast');
      }, 500);
    });
    
    $('#splash-tooltip').hover(function() {
      clearTimeout(timer);
    }, function() {
    clearTimeout(timer);
    timer = setTimeout(function() {
      $('#splash-tooltip').fadeOut('fast');
    }, 500);
    });

