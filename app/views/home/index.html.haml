=content_for(:js) do
  :javascript
    $(document).ready(function() {
      $('#about-link').click(function() {
        $('.about-more').slideToggle('slow', function() {
           console.log($('.about-more').css('display'));
           if ($('.about-more').css('display') == 'none') {
               $('#about-link').text('#{ t('.learn-more')}');   
           } else { 
               $('#about-link').text('#{ t('.learn-less')}');
           }
          });
      });
    });

