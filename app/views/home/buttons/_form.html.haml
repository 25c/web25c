= content_for(:js) do
  = javascript_include_tag "save-button"
  :javascript
    window.buttonId = '#{ @button.uuid }';

= simple_form_for @button, :url => home_button_path(@button) do |f|
  .span11
    %p
      %b= t('.button_form') 
    #button-choice-container
      .button-choice
        %input.button-radio{:type => 'radio', :name => 'button_size'}
        %span= t('.btn-large')
        %img{:src => image_path('25c-btn-large.png'), :'data-size' => 'btn-large'}
      .button-choice
        %input.button-radio{:type => 'radio', :name => 'button_size'}
        %span= t('.icon-large')
        %img{:src => image_path('25c-icon-large.png'), :'data-size' => 'icon-large'}
      .button-choice
        %input.button-radio{:type => 'radio', :name => 'button_size'}
        %span= t('.btn-medium')
        %img{:src => image_path('25c-btn-medium.png'), :'data-size' => 'btn-medium'}
      .button-choice
        %input.button-radio{:type => 'radio', :name => 'button_size'}
        %span= t('.icon-medium')
        %img{:src => image_path('25c-icon-medium.png'), :'data-size' => 'icon-medium'}
      .button-choice
        %input.button-radio{:type => 'radio', :name => 'button_size'}
        %span= t('.btn-small')
        %img{:src => image_path('25c-btn-small.png'), :'data-size' => 'btn-small'}
      .button-choice
        %input.button-radio{:type => 'radio', :name => 'button_size'}
        %span= t('.icon-small')
        %img{:src => image_path('25c-icon-small.png'), :'data-size' => 'icon-small'}
    .clear
  .span4
    / = f.input :title, :required => false, :label => t('.button_name')
    = f.input :code_type, :required => true, :as => :radio_buttons,
      :collection => [[t('.javascript'), "javascript"],[t('.iframe'), "iframe"]], 
      :label => t('.button_type')
    = f.input :size, :as => :hidden
  .span7
    %p
      %b= t('.button_code')
    
    - if @is_demo
      #code-wrapper
        %a{:href => sign_in_path}
          #code-overlay.lead= t('.sign_in_overlay')
          %pre#button-code-block
    - else
      %pre#button-code-block   
  .span3
    .submit-container
      - if @is_demo
        =link_to t('.sign_in_button'), sign_in_path, :class => 'btn btn-warning'
      - else
        = f.button :submit, :class => 'btn btn-warning'