= content_for(:head) do
  = javascript_include_tag "jquery"
  = javascript_include_tag "save-button"
  -#%script{:type => "text/javascript", :src  => "javascripts/save-button.js"}

.row
  .span12
    .page-header= t('.title')
  .span6
    %h4= t('.button_form')
    = simple_form_for @button, :url => home_button_path(@button) do |f|
      = f.input :size, :as => :radio_buttons, :collection => ["large", "medium", "icon"]
      = f.input :title, :required => false
      = f.input :description, :required => false, :input_html => { :rows => '3' }
      .form-actions
        = f.button :submit, :class => 'btn btn-primary'
        %span.hide#save-button-message= t('.saving_button')
  .span6
    %h4= t('.button_preview')
    #button-preview-container
      %img#button-preview-image{:src => image_path('25c-button-large.png')}
    %h4= t('.button_code')
    %pre#code-preview-block
      = '<a href="https://api.25c.com/' + @button.uuid + '" data-lang="en">+25c</a>'
      %br
      = '<script>(function(){ var src = (window.location.protocol == \'https:\' ? \'https:\' : \'http:\''
      = '"//www.plus25c.com/javascripts/button/button-compiled.js?' + @button.uuid
      = '"; document.write(\'<scri\' + \'pt src="\' + src + \'"></scr\' + \'ipt>\');}());</script>'