$.extend( $.fn.dataTableExt.oStdClasses, {
    "sWrapper": "dataTables_wrapper form-inline"
} );

$(document).ready(function(){
  // activate data tables
  $('table.clicks-table').dataTable({
    // sizing and style
    "sDom": "<'row'<'span4'l><'span7'f>r>t<'row'<'span6'i><'span6'p>>",
    "sPaginationType": "bootstrap",
    "aaSorting": [[ 0, "desc" ]],   // start with sorting by first col (date), descending
    "aoColumns": [                  // define setting for each col
      null,
      null,
      {"bVisible": false},         // invisible sortable date col
      {"iDataSort": 2},              // visible readable date - sorting linked to col 4
      {"bSortable": false}          // don't sort by cancel button
    ]
  });
});