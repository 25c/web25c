$(document).ready(function() {
  $form = $('form');
  $form.one('submit', function(event) {
    event.preventDefault();
    $.post(createPaymentUrl).success(function(data) {
      var paymentUuid = data.uuid;
      $form.append($('<input />', {
        type: 'hidden',
        name: 'invoice',
        value: paymentUuid
      }));
      $form.submit();
    });
  });
});